{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
