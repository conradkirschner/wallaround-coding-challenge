{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "types": ["node", "jest"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "src/*": ["src/*"] }
  }
}
