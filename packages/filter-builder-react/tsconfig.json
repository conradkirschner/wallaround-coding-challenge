{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "types": ["vite/client", "cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "filter-builder-react": ["./src/index.ts"],
      "filter-builder-core": ["../filter-builder-code/src/index.ts"],
      "filter-builder-core/*": ["../filter-builder-code/src/*"]
    }
  },
  "references": [{ "path": "../filter-builder-core" }],

  "include": ["src", "cypress", "examples", "vite.config.ts"],
  "exclude": ["dist", "coverage", "node_modules"]
}
